<section class='widget contact-form'>
  <div class='wrap'>
    <form name='contact' id='contact' method='POST' netlify-honeypot='bot-field' netlify>
      <p class='hidden'>
        <label>Donâ€™t fill this out if you're human: <input name='bot-field' type='text' /></label>
      </p>
      <p>
        <label for='full-name'>What's your name?</label>
        <input type='text' id='full-name' name='full-name' placeholder='First and Last Name' required />
      </p>
      <p>
        <label for='subject'>What can I help with?</label>
        <select id='subject' id='subject' name='subject'>
          <option value='I need a new website'>I would like a new website</option>
          <option value='I would like to update my website'>I would like to update my website</option>
          <option value='I just have a few questions'>I just have a few questions</option>
        </select>
      </p>
      <p>
        <label for='due-date'>When do you need this completed?</label>
        <input type='date' id='due-date' name='due-date' />
      </p>
      <p>
        <label for='graphic-designer' class='check-label'>
          <input id='graphic-designer' name='graphic-designer' type='checkbox' />
          I need a graphic designer
        </label>
      </p>
      <p>
        <label for='copywriter' class='check-label'>
          <input id='copywriter' name='copywriter' type='checkbox'/>
          I need a copy writer
        </label>
      </p>
      <p>
        <label for='message' class='textarea-label'>What else can you tell me about your project?</label>
        <textarea required name='message' id='message' cols='80' rows='10'></textarea>
      </p>
      <input type='submit'>
    </form>
  </div>
</section>
